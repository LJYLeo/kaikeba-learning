        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://111.231.106.221:3306/kkb"/>
        <property name="username" value="kkb"/>
        <property name="password" value="kkb111111"/>
    </bean>

</beans>