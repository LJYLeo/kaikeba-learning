<beans>

    <bean id="userService" class="com.kaikeba.service.UserServiceImpl">
        <!-- 引用类型 -->
        <property name="userDao" ref="userDao"/>
    </bean>

    <!-- 该类有一个初始化方法 -->
    <bean id="userDao" class="com.kaikeba.dao.UserDaoImpl" init-method="init">
